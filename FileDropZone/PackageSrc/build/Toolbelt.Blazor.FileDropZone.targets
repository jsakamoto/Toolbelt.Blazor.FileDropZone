<Project>

  <PropertyGroup>
    <ToolbeltBlazorFileDropZoneJavaScriptCacheBusting Condition=" '$(ToolbeltBlazorFileDropZoneJavaScriptCacheBusting)' == '' ">true</ToolbeltBlazorFileDropZoneJavaScriptCacheBusting>
  </PropertyGroup>

  <ItemGroup Condition=" '$(RuntimeIdentifier)' == 'browser-wasm' AND '$(ToolbeltBlazorFileDropZoneJavaScriptCacheBusting)' != '' ">
    <RuntimeHostConfigurationOption Include="Toolbelt.Blazor.FileDropZone.JavaScriptCacheBusting" Value="$(ToolbeltBlazorFileDropZoneJavaScriptCacheBusting)" Trim="true" />
  </ItemGroup>

</Project>